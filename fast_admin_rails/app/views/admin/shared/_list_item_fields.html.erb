<div class="flex flex-col gap-1">
  <% fields.each do |f| %>
    <% label = f[:label] || f[:name].to_s.humanize %>
    <% value = nil %>
    <% if f[:formatter].respond_to?(:call) %>
      <% value = instance_exec(record, &f[:formatter]) %>
    <% else %>
      <% begin %>
        <% value = record.public_send(f[:name]) %>
      <% rescue NoMethodError %>
        <% value = nil %>
      <% end %>
    <% end %>
    <div class="text-sm text-gray-800">
      <span class="font-medium"><%= label %>:</span>
      <span><%= value %></span>
    </div>
  <% end %>
</div>
